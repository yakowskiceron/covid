<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".Perfil"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/generaltoolbar"/>

    <FrameLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/covid19"
        android:scaleType="centerCrop">
    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Imagen_Perfil"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/doctora2"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:weightSum="6" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Nombre_Perfil"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carlos Hernandez"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/Llamadas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/c_1"
            android:layout_marginRight="200dp"/>

        <ImageView
            android:id="@+id/correos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/a_1"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="420dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/mapa"/>
                        <TextView
                            android:id="@+id/Local"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="210dp"
                            android:text="Masaya"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <!--Items 2-->

                        <ImageView
                            android:id="@+id/Imgen_Doctor"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="230dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/doctor_macho"/>
                        <TextView
                            android:id="@+id/Rama_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="280dp"
                            android:layout_marginRight="20dp"
                            android:text="General"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <!--Items 3-->
                        <ImageView
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="230dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/celular"/>
                        <TextView
                            android:id="@+id/Celular_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_marginLeft="280dp"
                            android:layout_marginRight="20dp"
                            android:text="57340390"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <!--Items 3  Correo-->

                        <ImageView
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/mensaje"/>
                        <TextView
                            android:id="@+id/Doc_correo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="210dp"
                            android:text="doctor@gmail.com"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <!--Items 4 Horario-->

                        <ImageView
                            android:layout_marginTop="120dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/time"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/Disponibilidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="125dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="20dp"
                            android:text="8:00 am - 9:00 pm"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <!--Items 5 Libro-->

                        <ImageView
                            android:layout_marginTop="120dp"
                            android:layout_marginLeft="230dp"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/librito"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/Universidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="125dp"
                            android:layout_marginLeft="280dp"
                            android:layout_marginRight="20dp"
                            android:text="UNAN"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                    </RelativeLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
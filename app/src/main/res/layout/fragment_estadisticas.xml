<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.EstadisticasFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="@dimen/toolbar_height_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/estadisticas"/>
        <TextView
            android:layout_margin="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autoridad_estadisticas"/>

        <ImageButton
            android:layout_margin="@dimen/margin"
            android:id="@+id/barra"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/barraa"/>



    </LinearLayout>


</RelativeLayout>